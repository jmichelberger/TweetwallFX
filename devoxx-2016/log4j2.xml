<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>
        <StringPropertyAppender name="SPA" selector="loggingStatusLineText">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </StringPropertyAppender>
        <TextAreaAppender name="TAA" selector="loggingTextArea">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </TextAreaAppender>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="SPA" />
            <AppenderRef ref="TAA" />
        </Root>
        <Logger name="org.tweetwallfx.startup" level="trace">
          <AppenderRef ref="SPA"/>
          <AppenderRef ref="TAA"/>
        </Logger>        
    </Loggers>
</Configuration>

